<div class="container">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'bg-dark text-white'}) do |f| %>
    <div class="card border border-light border-3">
      <div class="card-body bg-dark text-white">
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-3">
          <%= f.label :email, class: "form-label" %><br />
          <%= f.email_field :email, autofocus: true,
                            autocomplete: "email",
                            class: "form-control",
                            placeholder: "Enter your email" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary sign-up-btn" %>
        </div>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>